  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
    const burgerIcon = document.getElementById('iconNavbarSidenav');
    const sideNav = document.getElementById('sidenav-main');

    // Add a click event listener to the burger menu icon
    burgerIcon.addEventListener('click', () => {
        // Toggle the 'show' class on the side navigation element
        sideNav.classList.toggle('show');
    });

    // Initially show the navigation on large screens
    if (window.innerWidth >= 1200) {
        sideNav.classList.add('show');
    }

    // Add a resize event listener to handle changes in screen size
    window.addEventListener('resize', () => {
        // Show or hide the navigation based on screen size
        if (window.innerWidth >= 1200) {
            sideNav.classList.add('show');
        } else {
            sideNav.classList.remove('show');
        }
    });
    let clickCount = 0;

function toggleBurgerMenu() {
  clickCount++;

  const sidenav = document.querySelector(".sidenav-toggler-inner");

  if (clickCount % 2 !== 0) {
    // Clear existing child elements
    while (sidenav.firstChild) {
      sidenav.removeChild(sidenav.firstChild);
    }

    // Add the X icon using Font Awesome
    const xIcon = document.createElement("i");
    xIcon.classList.add("fontawesome", "fa", "fa-times");
    sidenav.appendChild(xIcon);
  } else {
    // Clear existing child elements
    while (sidenav.firstChild) {
      sidenav.removeChild(sidenav.firstChild);
    }

    // Add the three-line icon
    for (let i = 0; i < 3; i++) {
      const lineIcon = document.createElement("i");
      lineIcon.classList.add("sidenav-toggler-line");
      sidenav.appendChild(lineIcon);
    }
  }
}
  </script>
